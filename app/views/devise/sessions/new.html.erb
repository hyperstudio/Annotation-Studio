<%= content_for :body_id, 'sessions' %>
<%= content_for :body_class, 'new' %>
<%= content_for :page_title, "Sign in" %>
<div class="row">
  <div class="col-md-12" id="blurb">
      <% if ENV["GLOBAL_ALERT"] != "" %>
      <div class="alert alert-dismissible alert-<%= ENV["ALERT_LEVEL"] %>" role="alert">
        <%= ENV["GLOBAL_ALERT"] %>
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      </div>
      <% end %>
      <div class="alert alert-success alert-dismissible" role="alert">
        <%= $DOMAIN_CONFIG['welcome_message'].html_safe %>
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      </div>
  </div>
</div>
<div class="row">
  <div class="col-md-8" id="blurb">
    <p>
      <legend>
        Annotation Studio is a web application that supports close reading and collaborative interpretation of online documents. <a href="/users/sign_up">Register</a> and <a href="/users/sign_in">sign in</a> to try it out.
      </legend>
    </p>
    <%= render "techreqs" %>
  </div>
	<div class="col-md-4" id="login">
      <div class="well">
  		<h4>Sign in</h4>
    		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => "form"}) do |f| %>
	     	<%= devise_error_messages! %>

        <div class="form-group">
				<%= f.label :email %>
				<%= f.email_field :email, :class => "form-control" %>
				</div>

        <div class="form-group">
				<%= f.label :password %>
				<%= f.password_field :password, :class => "form-control" %>
				</div>

				<div><%= f.submit "Sign in", :class => "btn btn-default btn-default-primary" %></div>

    		<% end %>
      </div><!--/well -->
      <%= render "links" %>
	</div><!--/col -->
</div><!--/row -->
