<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => "form"}) do |f| %>
<%= devise_error_messages! %>
<div class="well devise" style="background-color: transparent; border-style: none;">
    <center><p id="title">Register with <span style="color:<%= $DOMAIN_CONFIG['site_color'] %>;"><%= $DOMAIN_CONFIG['site_name'] %></span></p></center>
    <div class="form-group" >
        <%= f.label :firstname, "First Name"%>
        <%= f.text_field :firstname, :class => "form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :lastname, "Last Name"%>
        <%= f.text_field :lastname, :class => "form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :email%>
        <%= f.email_field :email, :class => "form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :affiliation %>
        <%= f.text_field :affiliation, :class => "form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, :class => "form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, :class => "form-control" %>
    </div>


    <div class="checkbox">
        <label class='checkbox agreement'> <%= f.check_box :agreement %> I have read and accept the <%= link_to 'terms of service', page_path('terms') %></label>
    </div>

     <!-- Registering with a group invitation attached -->
        <% if params[:invite_token] %>
            <%= hidden_field_tag :invite_token, params[:invite_token] %>
        <% end %>

    <%= f.submit "Register", :class => "btn btn-primary" %>

</div><!--/well -->
<% end %>
<div class="well devise" style="background-color: transparent; border-style: none;">
    <p id="title">Or find your domain</p>
    <form>
    <div class="form-group">
        <select id="registration-chooser" class="form-control">
        <% if !Apartment::tenant_names.blank? %>
          <% for database in Apartment::tenant_names.map{|d| d.downcase}.sort! %>
            <option value="https://<%= database %>.annotationstudio.org">https://<%= database %>.annotationstudio.org</option>
          <% end %>
      <% end %>
        </select>
    </div>
    </form>
</div><!--/well -->
<script type="text/javascript">
$("document").ready(function(){
    $("#registration-chooser").change(function(){
        window.location = $(this).val();
    });
});
</script>
<%#= render "links" %>

<style>
#title{
    font-size: 18pt;
    margin-bottom: -5px;


}
</style>
