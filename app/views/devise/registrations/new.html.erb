<%= content_for :page_title, "Sign up" %>
<div class="row">
	<div class="col-md-8" id="blurb">
    <p>
      <legend>
        Annotation Studio is a web application that supports close reading and collaborative interpretation of online documents. <a href="/users/sign_up">Register</a> and <a href="/users/sign_in">sign in</a> to try it out.
      </legend>
    </p>
	</div>
	<div class="col-md-4" id="login">
		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => "form"}) do |f| %>
		<%= render "devise/shared/error_messages" %>
			<div class="well">
        <h4>Register</h4>
        <div class="form-group">
				<%= f.label :firstname, "First Name"%>
				<%= f.text_field :firstname, :class => "form-control" %>
				</div>

        <div class="form-group">
				<%= f.label :lastname, "Last Name"%>
				<%= f.text_field :lastname, :class => "form-control" %>
				</div>

        <div class="form-group">
				<%= f.label :email%>
				<%= f.email_field :email, :class => "form-control" %>
				</div>

        <div class="form-group">
				<%= f.label :affiliation %>
				<%= f.text_field :affiliation, :class => "form-control" %>
				</div>

        <div class="form-group">
				<%= f.label :password %>
				<%= f.password_field :password, :class => "form-control" %>
				</div>

        <div class="form-group">
				<%= f.label :password_confirmation %>
				<%= f.password_field :password_confirmation, :class => "form-control" %>
				</div>

        <div class="form-group">
        <%= f.label :rep_group_list, ENV["CLASS_TERM"] %><br />
        <% if Apartment::Tenant.current == 'demo' %>
        <%= f.text_field :rep_group_list, 'data-role' => "tagsinput", 'placeholder' => "Enter class name(s)", :class => "form-control", :value => ENV["ALT_DEFAULT_USER_GROUP"] %>
        <% else %>
        <%= f.text_field :rep_group_list, 'data-role' => "tagsinput", 'placeholder' => "Enter class name(s)", :class => "form-control", :value => ENV["DEFAULT_USER_GROUP"] %>
        <% end %>

        <span class="help-block">If you have a group or groups to join, put those here, and press enter after each. This will determine which documents are assigned to you.</span>

        </div>

        <div class="checkbox">
          <label class='checkbox agreement'> <%= f.check_box :agreement %> I have read and accept the <%= link_to 'terms of service', page_path('terms') %></label>
        </div>

				<%= f.submit "Register", :class => "btn btn-primary" %>

			</div><!--/well -->
		<% end %>
    <%= render "links" %>
	</div><!--/col -->
</div><!--/row -->
