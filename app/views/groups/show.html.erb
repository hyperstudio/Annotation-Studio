<h4Bold> Group: <%= @group.name %></h4Bold>
<br><br><br>

<% if in_group(params[:id])%>

<% if @group.ideaSpaceOn %>
	<button class="btn btn-primary"><a href="http://annotation-studio-idea-space.herokuapp.com/" id='is-link' target="_blank"> Access Idea Space </a>
	</button>
<% end %>

<% unless is_member(params[:id]) %>
<%= link_to "Manage Group", {:controller=> "groups", :action => "edit", :id => params[:id]}, {:class=> 'btn btn-primary'} %>
<% end %>

<% unless is_owner(params[:id]) %>
   <%= link_to "Leave", {:controller=> "groups", :action =>"leave", :id => params[:id]}, {:class=> 'btn btn-primary', data: {confirm: "Are you sure you want to leave this group?", toggle: 'tooltip', placement: 'top', 
          original_title: 'Delete'}} %>
<% end %>

	<% unless @group.name == 'Public' && is_member(@group.id) %>
	 <br><br>All Members 
		<table class="member-table">
			<tr class="member-table-row">
				<th> Name </th>
				<th> Role </th>
			</tr>
		<% if !@memberships.empty? %>
			<% @memberships.includes(:user).each do |m| %>
					<tr class="member-table-row"> 
						<% @user = m.user %>
						<td> <%= @user.firstname + " " + @user.lastname[0] + "." %></td>
						<td> <%= m.role %> </td> 
					</tr>
			<% end #.each %>
		<% end #if%>
		</table>

	<% end #unless %>

<% else %>

You do not have permission to view this page. 

<% end %>


	<style>

	.member-table {
	  border-collapse: collapse;
	  width: 60%;
	  background-color:white;
	}

	td, th {
	  border: 2px solid #EFEFEF;
	  text-align: left;
	  padding: 5px;
	}

	.member-table-row:nth-child(even) {
	  background-color: #DFDFDF;
	}

	#is-link{
		color:black;
	}

	#is-link:hover{
		color:white;
	}

	a:hover{
		text-decoration: none;
	}

	#action-buttons{
		display:flex;
	}

	</style>

