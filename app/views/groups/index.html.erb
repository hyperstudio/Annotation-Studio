<%= content_for :page_title, 'Groups' %>
<%= content_for :body_id, 'groups' %>
<%= content_for :body_class, 'index' %>
<%= stylesheet_link_tag "groups" %>
<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default" id="dashboard-documents">
      <div class="panel-heading">
        <span class="panel-title">Classes and Groups</span>
        <ul class="nav nav-tabs nav-tabs-xs pull-right" id="group-tabs" role="tablist">
          <li class="active"><a href="#groups" data-toggle="tab"><span class="badge"><%= current_user.rep_group_list.size %></span> Classes</a></li>
          <li><a href="#subgroups" data-toggle="tab"><span class="badge"><%= current_user.rep_subgroup_list.size %></span> Groups</a></li>
        </ul>
      </div><!-- / .panel-heading -->
        <div class="tab-content">
          <div class="tab-pane no-padding fade active in" id="groups">
            <table class="table table-striped table-bordered">
            <% current_user.rep_group_list.each do |group| %>
                <tr>
                  <td><%= group %></td>
                </tr>
              <% end %>
            </table>
          </div>
          <div class="tab-pane no-padding fade in" id="subgroups">
            <table class="table table-striped table-bordered">
            <% current_user.rep_subgroup_list.each do |group| %>
                <tr>
                  <td><%= group %></td>
                </tr>
              <% end %>
            </table>
          </div>
        </div>
     </div><!--/panel -->
	</div><!--/col-md-12 -->
</div><!--/row -->
