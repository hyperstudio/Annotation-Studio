<%= stylesheet_link_tag "documents" %>
<div class="row">
	<div class="span12">
		<h1>Documents</h1>
		<ul class="nav nav-tabs" id="document-tabs">
			<li class="active"><a href="#assigned" data-toggle="tab"><span class="badge"><%= Document.tagged_with(current_user.rep_group_list, :any => true).size %></span> Assigned</a></li>
			<li><a href="#created" data-toggle="tab"><span class="badge"><%= current_user.documents.size %></span> Created</a></li>
			<% if can? :manage, Document %>
			<li><a href="#all" data-toggle="tab"><span class="badge"><%= Document.all.length %></span> All</a></li>
			<% end %>
		</ul>
		<div class="tab-content">
			<div class="tab-pane active" id="assigned">
				<table class="table table-striped table-bordered">
					<tr>
						<th>Title</th>
						<th>Author</th>
            <th>Created</th>
						<th>Groups</th>
						<% if can? :manage, Document %>
						<th>Actions</th>
						<% end %>
					</tr>
					<% unless Document.tagged_with(current_user.rep_group_list, :any => true).empty? || Document.tagged_with(current_user.rep_group_list, :any => true).nil? %>
					<% Document.tagged_with(current_user.rep_group_list, :any => true).sort {|a, b| a.title.downcase <=> b.title.downcase }.each do |document| %>
					<tr>
						<td><%= link_to document.title, document_path(document.friendly_id), target: 'blank' %></td>
						<td><%= document.author %></td>
            <td><%= document.created_at.strftime("%m/%d/%Y") %></td>
						<td><% document.rep_group_list.each do |group| %><span class="label"><%= group %></span> <% end %></td>
            <% if can? :manage, Document %>
            <td>
            <% end %>
							<% if can? :edit, document %>
							<%= link_to 'Edit', edit_document_path(document.friendly_id), :class => 'btn btn-mini' %>
							<% end %>
							<% if can? :delete, document %>
							<%= link_to 'Delete', document_path(document.friendly_id), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
							<% end %>
            <% if can? :manage, Document %>
            </td>
            <% end %>
					</tr>
					<% end %>
					<% else %>
					<tr>
						<td colspan="4">No documents to view.</td>
					</tr>
					<% end %>
				</table>
			</div>
			<div class="tab-pane" id="created">
				<table class="table table-striped table-bordered">
					<tr>
						<th>Title</th>
						<th>Author</th>
            <th>Created</th>
            <th>Groups</th>
						<% if can? :manage, Document %>
						<th>Actions</th>
						<% end %>
					</tr>
					<% unless current_user.documents.empty? || current_user.documents.nil? %>
					<% current_user.documents.sort {|a, b| b.created_at <=> a.created_at }.each do |document| %>
					<% if can? :read, document %>
					<tr>
						<td><%= link_to document.title, document_path(document.friendly_id), target: 'blank' %></td>
						<td><%= document.author %></td>
            <td><%= document.created_at.strftime("%m/%d/%Y") %></td>
						<td><% document.rep_group_list.each do |group| %><span class="label"><%= group %></span> <% end %></td>
            <% if can? :manage, Document %>
            <td>
            <% end %>
              <% if can? :edit, document %>
							<%= link_to 'Edit', edit_document_path(document.friendly_id), :class => 'btn btn-mini' %>
							<% end %>
							<% if can? :delete, document %>
							<%= link_to 'Delete', document_path(document.friendly_id), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
							<% end %>
            <% if can? :manage, Document %>
            </td>
            <% end %>
					</tr>
					<% end %>
					<% end %>
					<% else %>
					<tr>
						<td colspan="4">No documents to view.</td>
					</tr>
					<% end %>
				</table>
			</div>
			<% if can? :manage, Document %>
			<div class="tab-pane" id="all">
				<table class="table table-striped table-bordered">
					<tr>
						<th>Title</th>
						<th>Author</th>
            <th>Created</th>
						<th>Groups</th>
						<% if can? :manage, Document %>
						<th>Actions</th>
						<% end %>
					</tr>
					<% unless current_user.documents.empty? || current_user.documents.nil? %>
					<% Document.all.sort {|a, b| b.created_at <=> a.created_at }.each do |document| %>
					<tr>
						<td><%= link_to document.title, document_path(document.friendly_id), target: 'blank' %></td>
						<td><%= document.author %></td>
            <td><%= document.created_at.strftime("%m/%d/%Y") %></td>
						<td><% document.rep_group_list.each do |group| %><span class="label"><%= group %></span> <% end %></td>
            <% if can? :manage, Document %>
            <td>
            <% end %>
							<% if can? [:edit], document %>
							<%= link_to 'Edit', edit_document_path(document.friendly_id), :class => 'btn btn-mini' %>
							<% end %>
							<% if can? [:delete], document %>
							<%= link_to 'Delete', document_path(document.friendly_id), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
							<% end %>
            <% if can? :manage, Document %>
            </td>
            <% end %>
					</tr>
					<% end %>
					<% else %>
					<tr>
						<td colspan="4">No documents to view.</td>
					</tr>
					<% end %>
				</table>
			</div>
			<% end %>
		</div>
		<% if can? :create, Document %>
		<%= link_to 'New', new_document_path, :class => 'btn btn-primary' %>
		<% end %>
	</div><!--/span12 -->
</div><!--/row -->
